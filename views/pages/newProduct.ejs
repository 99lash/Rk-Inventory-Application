<div class="form-wrapper">
  <h2 class="form-title">Add New Product</h2>
  <form action="/products" method="POST" class="form">
    <div class="form-group">
      <label for="name">Product Name</label>
      <input type="text" name="name" id="name" required />
    </div>

    <div class="form-group">
      <label for="description">Description</label>
      <textarea name="description" id="description" rows="3"></textarea>
    </div>

    <div class="form-group">
      <label for="price">Price</label>
      <input type="number" name="price" id="price" step="0.01" min="0" required />
    </div>

    <div class="form-group">
      <label for="category_id">Category</label>
      <select name="category_id" id="category_id" required>
        <option value="" disabled selected>Select a category</option>
        <% content.categories.forEach(category=> { %>
          <option value="<%= category.id %>">
            <%= category.name %>
          </option>
          <% }) %>
      </select>
    </div>

    <div class="form-group">
      <label for="model_id">Model</label>
      <select name="model_id" id="model_id" required>
        <option value="" disabled selected> Select a model</option>
        <% content.models.forEach(model=> { %>
          <option value="<%= model.id %>">
            <%= model.name %>
          </option>
          <% }) %>
      </select>
    </div>

    <div class="form-group">
      <label for="quantity">Initial Stock</label>
      <input type="number" name="quantity" id="quantity" value="1" min="0" required />
    </div>

    <div class="form-actions">
      <a href="/products" class="btn-secondary">‚Üê Back</a>
      <button type="submit" class="btn-submit">Add Product</button>
    </div>
  </form>
</div>